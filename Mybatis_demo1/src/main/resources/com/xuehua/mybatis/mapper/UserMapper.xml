<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuehua.mybatis.mapper.UserMapper">
    <!--添加用户信息-->
    <insert id="insertUser">
        insert into t_user values(null,'admin','123456',23,'男','123456@qq.com')
    </insert>
    <!--更新用户信息-->
    <update id="updateUser">
        update t_user set username = '张三' where id = 8;
    </update>
    <!--删除用户信息-->
    <delete id="deleteUser">
        delete from t_user where id = 6;
    </delete>
    <!--查询功能的标签必须设置resultType或者resultMap
    resultType:设置默认的映射关系
    resultMap:设置自定义的映射关系
    -->
    <!--根据id查询用户信息-->
    <select id="seleteUserById" resultType="com.xuehua.mybatis.pojo.User">
        select * from t_user where id = 7;
    </select>
    <!--查询所有用户信息-->
    <select id="seleteALlUser" resultType="user">
        select * from t_user ;
    </select>

</mapper>